body
    font-family Helvetica Neue, Helvetica, Arial, sans-serif
    font-size 14px
    margin 0
    padding 0
    font-weight 400

h1
h2
h3
h4
h5
h6
    font-weight 300
    margin 0.5em 0

a
    color #08c
    text-decoration none

    &:hover
        text-decoration underline

.container
    max-width 1080px
    margin auto
    padding 1em

#app
    border-top 1px solid #eee

.markdown-editor
    display flex
    justify-content space-around
    align-items stretch
    min-height 500px

    > *
        flex 1 1 50%
        max-width 50%
        max-height 100%
        display flex
        flex-direction column
        padding-right 2%

        > *:last-child
            flex 1

    .markdown-editor__preview
        img
            max-width 100%

        :last-child
            margin-bottom: 0

footer
    border-top 1px solid #eee
    text-align center
    margin-top 20px
    padding 20px 0
